= form_for @faq do |f|
  -if @faq.errors.any?
    #error_explanation
      %h2= "#{pluralize(@faq.errors.count, "error")} prohibited this faq from being saved:"
      %ul
        - @faq.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :heading
    = f.text_field :heading
  .field
    = f.label :question
    = f.text_area :question
  .field
    = f.label :answer
    = f.text_area :answer
  .field
    = f.label :priority
    = f.text_field :priority
  .field
    = f.label :type
    = f.text_field :type
  .field
    = f.label :typeid
    = f.text_field :typeid
  .actions
    = f.submit 'Save'
