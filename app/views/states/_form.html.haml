= form_for @state do |f|
  -if @state.errors.any?
    #error_explanation
      %h2= "#{pluralize(@state.errors.count, "error")} prohibited this state from being saved:"
      %ul
        - @state.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :State_ID
    = f.text_field :State_ID
  .field
    = f.label :State_Name
    = f.text_field :State_Name
  .actions
    = f.submit 'Save'
